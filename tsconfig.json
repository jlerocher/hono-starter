{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "strict": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "pretty": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx"
    }
}