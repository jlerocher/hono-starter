{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "module": "NodeNext",
        "strict": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "pretty": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"],
        "paths": {
            "@/*": ["./src/*"],
            "root/*": ["./*"]
        }
    },
    "include": ["./**/*.ts", "src/**/*.ts"],
    "exclude": ["node_modules"]
}
